# Chutes / networking
AFFINE_CHUTES_URL=http://localhost:8000
CHUTES_API_KEY=cpk_your_key_here

# Bittensor wallet (hotkey must match validator hotkey)
BT_WALLET_COLD=default
BT_WALLET_HOT=validator
AFFINE_NETUID=64

# Validator identity
AFFINE_VALIDATOR_HOTKEY=validator
AFFINE_EPOCH_ANCHOR=0000000000000000
AFFINE_EPOCH=0

# Miner configuration (update at runtime as the challenger changes)
AFFINE_CONTENDER_UID=31
AFFINE_CHAMPION_UID=12

# Signing (ed25519 secret key hex; never commit the real value)
AFFINE_SIGNING_KEY_HEX=ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff
AFFINE_SECRET_SEED_HEX=
# Object storage (R2 / S3 compatible)
AFFINE_BUCKET_ENDPOINT=https://example.r2.cloudflarestorage.com
AFFINE_BUCKET_NAME=affine
AFFINE_BUCKET_PREFIX=validators
AFFINE_BUCKET_ACCESS_KEY=
AFFINE_BUCKET_SECRET_KEY=
AFFINE_BUCKET_REGION=auto
AFFINE_BUCKET_PUBLIC_BASE=https://pub-example.r2.dev
AFFINE_BUCKET_CREATE=1

# Local cache directory for downloaded blocks (inside container)
AFFINE_CACHE_DIR=/app/data/blocks

# Optional tuning
AFFINE_RATIO_DECAY_SECONDS=21600
AFFINE_EPSILON=0.01
AFFINE_MAX_TRIALS=200
